
.doctor-card{
  width:666rpx;
  height:378rpx;
  margin:auto;
  display: flex;
  position: relative;
  color:#fff;
}
.doctor-card .bg{
  width:100%;
  position: absolute;
  top:0;
  left:0;
}
.doctor-card .avatar{
  width:166rpx;
  height:166rpx;
  position: absolute;
  top:36rpx;
  left:50rpx;
}
.doctor-card .name{
  position: absolute;
  left:246rpx;
  top:30rpx;
  height:44rpx;
  font-size:48rpx;
  line-height:44px;
}
.doctor-card .position{
  position: absolute;
  left:246rpx;
  top:112rpx;
  height:32rpx;
  font-size:32rpx;
  color:rgba(0,0,0,0.85);
  line-height:32rpx;
}
.doctor-card .hospital{
  position: absolute;
  left:246rpx;
  top:166rpx;
  height:32rpx;
  font-size:36rpx;
  line-height:32rpx;
}
.doctor-card .split{
  width:100%;
  position: absolute;
  top:222rpx;
  height:4rpx;
  background-color: rgba(255,255,255,.5);
}
.doctor-card .intro{
  position: absolute;
  width:100%;
  display: flex;
  top:244rpx;
  flex-wrap: wrap;
}
.doctor-card .intro .dd{
  flex:50%;
  height:44rpx;
  font-size:32rpx;
  color:rgba(255,255,255,1);
  line-height:44rpx;
  margin-bottom: 22rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
}




.doctor-banner{
  width:100%;
  height: 200rpx;
  position: relative;
}
.doctor-banner .avatar{
  width:200rpx;
  height:200rpx;
  position: absolute;
  top:0;
  left:0;
  border-radius: 20rpx;
  overflow: hidden;
}
.doctor-banner .logo{
  height: 88rpx;
  position: absolute;
  top:0;
  left:220rpx;
  width: 450rpx;
}
.doctor-banner .logo image{
  height: 88rpx;
}
.doctor-banner .name{
  position: absolute;
  top:98rpx;
  left:234rpx;
  font-size:36rpx;
  color:rgba(30,31,32,1);
  line-height:44rpx;
  font-weight: bold;
}
.doctor-banner .position{
  position: absolute;
  top:160rpx;
  left:234rpx;
  height:32rpx;
  font-size:32rpx;
  color:#1DA1F2;
  line-height:32rpx;

}

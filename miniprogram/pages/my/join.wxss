.picker-box{
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index:99;
  background-color: rgba(0,0,0,.5);
  opacity:0;
  visibility: hidden;
  pointer-events: none;
  transition:opacity 256ms;
}
.picker-box.show{
  opacity: 1;
  pointer-events: auto;
  visibility: visible;
}
.picker-box.show .picker-body{
  transform: translateY(0rpx);
}
.picker-box .picker-body{
  background-color:#ffffff;
  position: absolute;
  bottom:0;
  left:0;
  width: 100%;
  height: 90vh;
  border-radius: 16px 16px 0px 0px;
  padding: 0 48rpx 0 48rpx;
  box-sizing: border-box;
  display:flex;
  flex-direction: column;
  transform: translateY(100rpx);
  transition: transform 256ms;
}
.picker-box .picker-body::before{
  content: "";
  position: absolute;
  width: 96rpx;
  height: 12rpx;
  background: #E0E0E0;
  border-radius: 6rpx;
  top: 24rpx;
  left: 50%;
  transform:translateX(-50%);
}
.picker-box .picker-body .t{   
  font-size: 48rpx;
  font-weight: 400;
  color: #1E1F20;
  margin-bottom: 100rpx;
  padding-top: 100rpx;
  flex:none;
}
.picker-box .picker-body .words{
  font-size: 30rpx;
  font-weight: 400;
  color: #1E1F20;
  line-height: 48rpx;
  width: 100%;
  height:calc(100% - 370rpx);
  flex:none;
}
.picker-box .picker-body .words text{
  display:block;
}
.picker-box .picker-body .words .p{
  margin-bottom: 48rpx;
}
.picker-body .control{
  flex:none;
  height: 142rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  
background: rgba(255, 255, 255, 0.68);
